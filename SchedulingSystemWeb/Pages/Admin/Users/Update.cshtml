@page
@model SchedulingSystem.Pages.Admin.Users.UpdateModel
@{
}
<body>
<div class="container">
    <form class="form" method="post">
        <div class="row">
            <input type="hidden" value="@Model.AppUser.Id" asp-for="@Model.AppUser.Id" />
            <input type="hidden" value="@Model.OldRoles.ToList()" asp-for="@Model.OldRoles" />
            <div class="form-group col-md-6">
                <label asp-for="@Model.AppUser.FirstName">First Name</label>
                <input class="form-control" asp-for="@Model.AppUser.FirstName" value="@Model.AppUser.FirstName" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.AppUser.LastName">Last Name</label>
                <input class="form-control" asp-for="@Model.AppUser.LastName" value="@Model.AppUser.LastName" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.AppUser.Email">Email</label>
                <input class="form-control" asp-for="@Model.AppUser.Email" value="@Model.AppUser.Email" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.AppUser.PhoneNumber">Phone Number</label>
                <input class="form-control" asp-for="@Model.AppUser.PhoneNumber" value="@Model.AppUser.PhoneNumber" />
            </div>
        </div>
            <div class="row">
                <div class="form-group col-md-6" id="departmentGroup" style="display: none;">
                    <label asp-for="Department">Providers Department</label>
                    <select asp-for="Department" asp-items="@Model.DepartmentList" class="form-select" id="department">
                        <option disabled selected>--Select Department--</option>
                    </select>
                </div>
            </div>

            @{
                foreach (var r in Model.AllRoles)
                {
                    <div class="form-check">
                        @{
                            if (Model.UsersRoles.Contains(r))
                            {
                                <input class="form-check-input" name="roles" type="checkbox" id="@r" value="@r" checked>
                                <label class="form-check-label">@r</label>
                            }
                            else
                            {
                                <input class="form-check-input" name="roles" type="checkbox" id="@r" value="@r">
                                <label class="form-check-label">@r</label>
                            }
                        }
                    </div>
                }
            }
            <button type="submit">Update</button>
        </form>
    </div>

    <script>
        var departmentGroup = document.getElementById('departmentGroup');
        var teacherCheckbox = document.querySelector('input[name="roles"][value="TEACHER"]');

        teacherCheckbox.addEventListener('change', function () {
            console.log('Checkbox state changed');
            if (this.checked) {
                departmentGroup.style.display = 'block';
            } else {
                departmentGroup.style.display = 'none';
            }
        });
    </script>
</body>


