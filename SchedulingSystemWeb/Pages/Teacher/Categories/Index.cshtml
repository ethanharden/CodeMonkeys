@page
@model SchedulingSystemWeb.Pages.Teacher.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<h4>Categories</h4>
<div class="container">
    <div class="col-12 mb-3">
        <!-- Create Category Button -->
        <a asp-page="/Teacher/Categories/Upsert" class="btn btn-success">Create New Category</a>
    </div>
    <div class="row">
        @foreach (var category in Model.Categories)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <div class="class=" card-text"" style="width: 50px; height: 50px; border: 1px solid #ddd; background-color: @category.Color; margin-bottom: 5px;"></div>
                        <a asp-page="/Teacher/Categories/Upsert" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                        <form method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                            <input type="hidden" name="id" value="@category.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>               
            </div>
        }

    </div>
</div>